<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/main_app"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:text="Trang cá nhân"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/bg_profile"
                android:src="@drawable/bg_conan"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="100dp"
                app:layout_constraintHorizontal_bias="0.05"
                android:id="@+id/avt_profile"
                app:civ_border_color="@color/main_app"
                app:civ_border_width="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/avt_conan"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:id="@+id/name_profile"
                android:text="Nguyễn Gia Nghiêm"
                android:maxWidth="250dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avt_profile"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />
            <LinearLayout
                android:id="@+id/layout_infor_follow"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_profile"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_weight="3.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:textColor="@color/main_app"
                        android:textSize="16sp"
                        android:text="Người theo dõi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="9.999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:textColor="@color/main_app"
                        android:textSize="16sp"
                        android:text="Đang theo dõi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="9.999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:textColor="@color/main_app"
                        android:textSize="16sp"
                        android:text="Bạn bè"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="9.999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progessbar"
                android:layout_width="309dp"
                android:layout_height="74dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".2" />
            <Button
                android:textAllCaps="false"
                android:backgroundTint="@color/xam"
                android:id="@+id/edt_profile"
                android:text="Chỉnh sửa thông tin"
                app:layout_constraintTop_toBottomOf="@id/layout_infor_follow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />
            <Button
                android:textAllCaps="false"
                android:id="@+id/edt_page_profile"
                android:text="Chỉnh sửa trang cá nhân"
                app:layout_constraintTop_toBottomOf="@id/edt_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />
            <LinearLayout
                android:id="@+id/layout_infor_profile"
                android:paddingBottom="8dp"
                android:background="@color/xam_nhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_page_profile"
                >
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        android:background="@color/xam"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:id="@+id/ic_diachi"
                                android:src="@drawable/ic_diachi"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                            <TextView
                                android:id="@+id/diachi"
                                app:layout_constraintStart_toEndOf="@id/ic_diachi"
                                app:layout_constraintTop_toTopOf="@id/ic_diachi"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:maxLines="2"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:text="Thành phố Bến Tre"
                                android:layout_marginStart="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:id="@+id/ic_nghe"
                                android:src="@drawable/ic_nghe"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                            <TextView
                                android:id="@+id/nghe"
                                app:layout_constraintStart_toEndOf="@id/ic_nghe"
                                app:layout_constraintTop_toTopOf="@id/ic_nghe"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:maxLines="2"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:text="Công nghệ thông tin"
                                android:layout_marginStart="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            >
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:id="@+id/ic_doanhnghiep"
                                android:src="@drawable/ic_doanhnghiep"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                            <TextView
                                android:id="@+id/congty"
                                app:layout_constraintStart_toEndOf="@id/ic_doanhnghiep"
                                app:layout_constraintTop_toTopOf="@id/ic_doanhnghiep"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:maxLines="2"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:text="Garena Center, Thủ Đức"
                                android:layout_marginStart="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="20dp"
                            >
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:id="@+id/ic_sothich"
                                android:src="@drawable/ic_sothich"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                            <TextView
                                android:id="@+id/sothich"
                                app:layout_constraintStart_toEndOf="@id/ic_sothich"
                                app:layout_constraintTop_toTopOf="@id/ic_sothich"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:maxLines="2"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:text="Đá bóng, chơi game, hát"
                                android:layout_marginStart="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <androidx.viewpager2.widget.ViewPager2
                app:layout_constraintTop_toBottomOf="@id/tab_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.tabs.TabLayout
                app:layout_constraintTop_toBottomOf="@id/layout_infor_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>